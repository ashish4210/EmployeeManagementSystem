@page "{id:int}"
@model EmployeeManagementSystem.Pages.Employees.DeleteModel

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Employee.Name</h4>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Employee.Name
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Employee.Email
            </dd>
            <dt class="col-sm-2">
                Date of Birth
            </dt>
            <dd class="col-sm-10">
                @Model.Employee.DateOfBirth.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Department
            </dt>
            <dd class="col-sm-10">
                @Model.Employee.Department
            </dd>
        </dl>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index">Cancel</a>
    </form>
</div>